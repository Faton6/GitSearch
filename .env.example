# Environment variables for GitSearch
# Copy this file to .env and configure your settings
# IMPORTANT: Never commit .env file to version control!

# =============================================================================
# Database Configuration
# =============================================================================
DB_USER=root
DB_PASSWORD=changeme
URL_DB=172.32.0.97

# =============================================================================
# GitHub API Tokens
# =============================================================================
# Add multiple tokens for higher rate limits
# Get tokens at: https://github.com/settings/tokens
GITHUB_TOKEN_1=
GITHUB_TOKEN_2=
GITHUB_TOKEN_3=
# Token for cloning repositories (needs repo scope)
GITHUB_CLONE_TOKEN=

# =============================================================================
# AI Analysis Configuration
# =============================================================================
AI_ANALYSIS_ENABLED=true
AI_ANALYSIS_TIMEOUT=30
AI_MAX_CONTEXT_LENGTH=4000
AI_COMPANY_RELEVANCE_THRESHOLD=0.5
AI_TRUE_POSITIVE_THRESHOLD=0.6

# LLM Provider API Keys (at least one required for AI analysis)
# Together AI: https://api.together.xyz/
TOGETHER_API_KEY=
# OpenRouter: https://openrouter.ai/
OPENROUTER_API_KEY=
# Fireworks: https://fireworks.ai/
FIREWORKS_API_KEY=

# =============================================================================
# Logging Configuration
# =============================================================================
# Valid levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Console can have different level than file
CONSOLE_LOG_LEVEL=INFO
# Enable JSON format for log files (for ELK/Grafana integration)
LOG_JSON_FORMAT=false

# =============================================================================
# Temp Folder Management
# =============================================================================
# Maximum temp folder size in GB before LRU cleanup
# MAX_TEMP_FOLDER_SIZE_GB=10.0
# Clone method: 'git' (recommended) or 'pygithub'
# CLONE_METHOD=git

# =============================================================================
# Scanning Configuration
# =============================================================================
# Maximum repository size in KB (default: 300000 = 300MB)
# REPO_MAX_SIZE=300000
# Maximum time for clone operations in seconds
# MAX_TIME_TO_CLONE=500
